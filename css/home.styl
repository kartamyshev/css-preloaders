html
body
  width: 100%
  height: 100%

body
  margin: 0
  padding: 0
  background: #000000
  display: flex

.btns
  position: absolute
  left: 50%
  top: 20px
  width: 150px
  margin-left: -(@width/2)
  display: flex
  .get-loader
    background-color: transparent;
    border: 1px solid #f07444;
    color: #f07444;
    transition: all 0.2s ease 0s;
    width: 150px
    margin: 0 5px
    height: 45px
    border-radius 2px
    cursor: pointer
    &:hover
      background-color: #f07444;
      color: white;

.preloader
  &.horizontal-chunks
    size = 150px
    width: size
    height: size
    margin: auto
    display: flex
    justify-content space-between
    align-items center
    span
      background: #ffffff
      transform scaleX(0)
      width: (size / 6)
      height: 10px
      animation horizontal-chunks 1.5s infinite forwards

@keyframes horizontal-chunks
  from, to
    transform scaleX(0)
  90%
    transform scaleX(1)

for i in (1..5)
  .preloader.horizontal-chunks span:nth-child({i})
    animation-delay (i / 10)s