@import "components/common";
@import "components/buttons";
@import "components/animations";

.preloader
  &.horizontal-chunks
    size = 150px
    width: size
    height: size
    margin: auto
    display: flex
    justify-content space-between
    align-items center
    span
      background: #ffffff
      transform scaleX(0)
      width: (size / 6)
      height: 10px
      animation horizontal-chunks 1.5s infinite forwards
      for i in (1..5)
        &:nth-child({i})
          animation-delay (i / 10)s