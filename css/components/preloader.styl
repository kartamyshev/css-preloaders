.preloader
  margin: auto
  display: flex
  justify-content space-between
  align-items center

  &.horizontal-chunks
    size = 150px
    width: size
    height: @width
    span
      background: #ffffff
      transform scaleX(0)
      width: (size / 6)
      height: 10px
      animation horizontal-chunks 1.5s infinite forwards
      for i in (1..5)
        &:nth-child({i})
          animation-delay (i / 10)s

  &.successively-circles
    > div
      width: 15px
      height: 15px
      background: rgba(255, 255, 255, .7)
      border-radius 50%
      margin: 0 5px
      animation successively-circles 3s infinite
      for i in (1..5)
        &:nth-child({i})
          animation-delay (i / 10)s

  &.adventurous-circles
    size = 50px
    position: relative
    width: size
    height: size
    > div
      position: absolute
      top: 50%
      width: size
      height: size
      margin-top: -(size / 2)
      border-radius 50%
      animation-fill-mode forwards
    .sand
      background: #FFCC99
      animation adventurous-circle-sand 4s linear infinite
    .goldenrod
      background: rgba(0, 0, 0, 1)
      animation adventurous-circle-goldenrod 4s ease-in-out infinite
      animation-delay 1s
    .orange
      background: #f07444
      animation adventurous-circle-orange 4s ease-in-out infinite
      animation-delay 2s
